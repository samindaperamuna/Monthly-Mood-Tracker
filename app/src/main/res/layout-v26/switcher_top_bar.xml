<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/maincolor"
    android:orientation="horizontal">


    <org.fifthgen.colouringbooks.view.ImageButtonDefine
        android:id="@+id/color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/firstrow_icon_bg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/button_color"
        android:text="@string/color"
        android:textColor="@drawable/textcolor_white_gray" />

    <org.fifthgen.colouringbooks.view.ImageButtonDefine
        android:id="@+id/mood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/firstrow_icon_bg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/button_mood"
        android:text="@string/mood"
        android:textColor="@drawable/textcolor_white_gray" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.6" />


</LinearLayout>
